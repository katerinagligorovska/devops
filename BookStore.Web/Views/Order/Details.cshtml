@model BookStore.Domain.Entity.Order

<div class="container">
    <p>
        For: @Model.User.UserName
    </p>

    <a asp-action="Index">Back to List</a>

    @{
        int i = 0;
    }
    @foreach (var item in Model.BooksInOrder)
    {
        <div>daskjdansjk</div>
        var book = item.Book;
        @* if (i % 3 == 0)
            {
            @:<div class="row">
            } *@
        <div class="container">
            <hr />
            <div class="row">
                <div class="col-6">
                    <div class="card border-dark mb-3 text-black-50" style="max-width: 25rem;">
                        <div class="card-header">
                            <h3>@book.BookName</h3>
                        </div>
                        <div class="card-body text-dark">
                            <p class="card-text">
                                <label class="col-sm-10">
                                    <b>Description:</b> <br />
                                    @book.BookDescription
                                </label>
                                <label class="col-sm-10">
                                    <b>Price:</b> <br />
                                    @book.Price $
                                </label>
                                <label class="col-sm-10">
                                    <b>Genre:</b> <br />
                                    @book.Genre
                                </label>
                            <p>Quantity: @item.Quantity</p>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div style="width: 18rem; height: 30rem;">
                        <img class="img-thumbnail" src="@book.BookImage" alt="Image for Book!" />
                    </div>
                </div>
            </div>
        </div>
    }


</div>
