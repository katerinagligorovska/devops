@model BookStore.Web.ViewModel.AddUserToRoleViewModel

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Add User To Role</h3>
        </div>
        <div class="card-body">
            @Html.HiddenFor(m => m.UserId)
            <div class="form-group">
                @Html.LabelFor(m => m.User.FirstName)
                @Html.DisplayFor(m => m.User.FirstName, new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.User.LastName)
                @Html.DisplayFor(m => m.User.LastName, new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.User.Email)
                @Html.DisplayFor(m => m.User.Email, new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.RoleId, new { @class = "control-label" })
                @Html.DropDownListFor(
                m => m.RoleId,
                new SelectList(Model.Roles, "Id", "Name"),
                new {@class = "form-control" })
                @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto;" />
            <a asp-action="ListAll" class="btn btn-primary" style="width:auto;">
                Cancel
            </a>
        </div>
    </div>
</form>
