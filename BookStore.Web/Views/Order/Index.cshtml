@{
}
@model List<BookStore.Domain.Entity.Order>

<div class="container">

  

    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Costumer Details</th>
                <th scope="col">Number of books</th>

                <th></th>
            </tr>
        </thead>
        <tbody style="color:white;">
            @for(int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td class="text-dark">@item.User.UserName</td>
                    <td class="text-dark">@item.BooksInOrder.Count()</td>
                    <td>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-secondary" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>