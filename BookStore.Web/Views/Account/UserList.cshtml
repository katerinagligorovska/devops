@model List<BookStore.Web.ViewModel.UserViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="row">
    <div class="col-12 mx-auto mt-4 pt-3">
        <h3>Your Book Store Users</h3>
        <table class="table table-striped mt-2">
            <thead>
                <tr>
                    <th scope="col">User ID#</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Roles</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="align-middle">@user.Id</td>
                        <td class="align-middle font-weight-bold">@user.FirstName @user.LastName</td>
                        <td class="align-middle">@user.Email</td>
                        <td class="align-middle">@string.Join(", ", user.Roles)</td>
                        <td class="align-middle">
                            @Html.ActionLink( "Manage User Roles", "ManageUserRoles", "Account",
                        new { id = user.Id },
                        new { @class = "btn btn-outline-secondary" }
                        )
                        </td>
                    </tr>
                }
            </tbody>
            
        </table>
    </div>
</div>
